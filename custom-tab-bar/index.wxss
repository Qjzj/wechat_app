.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: #e9e9e9;
  display: flex;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  /* overflow: visible; */
}

.item {
  width: 96rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: content-box;
}

.item:nth-child(2) {
  position: relative;
  bottom: 45rpx;
  width: 110rpx;
  height: 110rpx;
  background: #1d5789;
  border: 6rpx solid #fff;
  border-radius: 50%;
  color: #fff;
}


.item .icon {
  width: 54rpx;
  height: 54rpx;
}

.item:nth-child(2) .icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.item .txt {
  font-size: 20rpx;
}