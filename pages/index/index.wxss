.home .head {
  padding: 40rpx 15rpx 30rpx;
  background: #f1e8d7;
  border-radius: 0 0 40rpx 40rpx;
}

.head .swiper {
  position: relative;
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.head .swiper-wrap {
  width: 100%;
  height: 100%;
}

.head .swiper image {
  width: 100%;
  height: 100%;
}

.head .swiper .location {
  position: absolute;
  left: 0;
  top: 0;
  padding: 15rpx;
  border-radius: 0 0 20rpx 0;
  background: rgba(0, 0, 0, .6);
  font-size: 24rpx;
  color: #fff;
}

.head .nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
  height: 140rpx;
}

.head .nav .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width: 140rpx; */
}

.head .nav .item image {
  width: 80rpx;
  height: 80rpx;
}

.head .nav .cheap image {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  vertical-align: middle;
}

.head .nav .item .txt {
  font-size: 26rpx;
}